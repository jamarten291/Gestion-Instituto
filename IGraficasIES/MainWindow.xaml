<Window x:Class="IGraficasIES.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IGraficasIES"
        mc:Ignorable="d"
        Title="Gestión de Instituto"
        Height="450"
        Width="700" 
        WindowStartupLocation="CenterScreen"   
        WindowStyle="ToolWindow">
    <Grid x:Name="gridPrincipal">
        <StackPanel x:Name="stkPanel" Grid.ColumnSpan="2" Margin="0,0,0,8">
            <Menu x:Name="menuPrincipal">
                <MenuItem x:Name="menuArchivo" Header="_Archivo">
                    <MenuItem Header="Abrir"
                Click="Abrir_Click"/>
                    <Separator/>
                    <MenuItem Header="Salir"
                Click="Salir_Click">
                        <MenuItem.Icon>
                            <Image x:Name="menuSalir"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem x:Name="menuFuente" Header="_Fuente">
                    <MenuItem Header="_Negrita" IsCheckable="True"
                 Checked="Negrita_Checked"
                 Unchecked="Negrita_Unchecked"/>
                    <MenuItem Header="_Cursiva" IsCheckable="True"
                 Checked="Cursiva_Checked"
                 Unchecked="Cursiva_Unchecked"/>
                </MenuItem>
                <MenuItem x:Name="menuFiltros" Header="_Filtros">
                    <MenuItem Header="Edad mayor de 35 (nombre, apellidos, edad, materia)" IsCheckable="True"
             Checked="Filtro1_Checked"
             Unchecked="Filtro1_Unchecked"/>
                    <MenuItem Header="Año ingreso igual o superior a 2010 (todo)" IsCheckable="True"
             Checked="Filtro2_Checked"
             Unchecked="Filtro2_Unchecked"/>
                    <MenuItem Header="Año ingreso igual o superior a 2010 y Estado Civil es casado (nombre, apellidos, año y e.civil)" IsCheckable="True"
             Checked="Filtro3_Checked"
             Unchecked="Filtro3_Unchecked"/>
                    <MenuItem Header="Estatura superior a 160 cm y ordenados por Estatura descendiente y Peso descendiente (nombre, apellidos, edad, estatura y peso)" IsCheckable="True"
             Checked="Filtro4_Checked"
             Unchecked="Filtro4_Unchecked"/>
                </MenuItem>
                <MenuItem x:Name="menuAgrupacion" Header="_Agrupación">
                    <MenuItem Header="Agrupar por E.Civil y mostrar nombre, apellidos, edad, peso y estatura"
              IsCheckable="True"
              Checked="Agrup1_Checked"
              Unchecked="Agrup1_Unchecked"/>
                    <MenuItem Header="Agrupar por E.Civil y mostrar cuantos hay en cada grupo"
              IsCheckable="True"
              Checked="Agrup2_Checked"
              Unchecked="Agrup2_Unchecked"/>
                    <MenuItem Header="Agrupar por Rangos de Edad, orden descendente por Edad y mostrar nombre, apellidos, email"
              IsCheckable="True"
              Checked="Agrup3_Checked"
              Unchecked="Agrup3_Unchecked"/>
                    <MenuItem Header="Agrupar por Seguro Médico, cuando la edad es igual o superior a 40, orden peso y apellidos (nombre, apellidos, seguro peso)"
              IsCheckable="True"
              Checked="Agrup4_Checked"
              Unchecked="Agrup4_Unchecked"/>
                </MenuItem>
            </Menu>
        </StackPanel>
        <Grid x:Name="gridCentral">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="91*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="87*"/>
                <RowDefinition Height="107*"/>
            </Grid.RowDefinitions>

            <!-- Fila 1 -->
            <!-- Labels -->
            <Label x:Name="lblNombre" Grid.Column="0" Grid.Row="1" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Content="Nombre" Margin="11,0,0,0"/>
            <Label x:Name="lblApellidos" Grid.Column="0" Grid.Row="1" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Apellidos" Margin="11,0,0,0"/>
            <Label x:Name="lblEmail" Grid.Column="3" Grid.Row="1" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Email"/>

            <!-- TextBoxes -->
            <TextBox x:Name="txtNombre" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBox x:Name="txtApellidos" Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Width="200" Height="25" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
            <TextBox x:Name="txtEmail" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="1" Width="150" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <!-- CheckBoxes -->
            <CheckBox x:Name="checkDestinoDefinitivo" Grid.Column="4" Grid.Row="1" Width="120" Height="25" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Destino definitivo"
                      Checked="Definitivo_Checked"
                      Unchecked="Definitivo_Unchecked"/>

            <!-- Imágen -->
            <Image x:Name="imgFoto" Grid.Column="6" Grid.Row="1"
HorizontalAlignment="Left" VerticalAlignment="Center" Height="Auto"
Width="Auto" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="0,20,10,20"/>

            <!-- Fila 3 -->
            <!-- Labels -->
            <Label x:Name="lblEdad" Grid.Column="0" Grid.Row="3" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Edad" Margin="11,0,0,0"/>
            <Label x:Name="lbnAnioIngreso" Grid.Column="2" Grid.Row="3" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Año ingreso"/>
            <Label x:Name="lbnMedico" Grid.Column="5" Grid.ColumnSpan="2" Grid.Row="3" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Content="S. Médico"/>
            <Label x:Name="lblFuncionario" Grid.Column="4" Grid.Row="3" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Tipo Funcionario"/>

            <!-- TextBox y TextBlock -->
            <TextBox x:Name="txtAnioIngreso" Grid.Column="3" Grid.Row="3" Width="100" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <ListBox x:Name="listMedico" Grid.Column="6" Grid.Row="3" Width="75" Height="45" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Visible">
                <ListBoxItem x:Name="ss" Content="S. Social"/>
                <ListBoxItem x:Name="muface" Content="MUFACE"/>
            </ListBox>

            <!-- ComboBox -->
            <ComboBox x:Name="comboEdad" Grid.Column="1" Grid.Row="3" Width="50" Height="25" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <!-- RadioGroup -->
            <RadioButton x:Name="rdbPracticas" Margin="0,30,0,0" GroupName="tipousu" Grid.Row="3" Grid.Column="4" Content="En Prácticas" HorizontalAlignment="Left" VerticalAlignment="Top" Width="146" Height="15"/>
            <RadioButton x:Name="rdbCarrera" GroupName="tipousu" Grid.Row="3" Grid.Column="4" Content="De Carrera" HorizontalAlignment="Left"  VerticalAlignment="Center" Width="146" Height="15" Margin="0,0,0,11"/>

        </Grid>
        <Grid x:Name="gridBotones">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="15*"/>
                <ColumnDefinition Width="20*"/>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="91*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="87*"/>
                <RowDefinition Height="107*"/>
            </Grid.RowDefinitions>

            <!-- Botones -->
            <Button x:Name="btnPrimero" Click="BtnPrimero_Click" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Grid.Column="1" Grid.Row="4" Margin="0,11,0,0">
                <DockPanel>
                    <Image x:Name="imgPrimero"></Image>
                </DockPanel>
            </Button>
            <Button x:Name="btnAnterior" Click="BtnAnterior_Click" HorizontalAlignment="Right" Height="40" VerticalAlignment="Top" Width="40" Grid.Column="2" Grid.Row="4" Margin="0,11,0,0">
                <DockPanel>
                    <Image x:Name="imgAnterior"></Image>
                </DockPanel>
            </Button>
            <Button x:Name="btnSiguiente" Click="BtnSiguiente_Click" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Grid.Column="4" Grid.Row="4" Margin="0,11,0,0">
                <DockPanel>
                    <Image x:Name="imgSiguiente"></Image>
                </DockPanel>
            </Button>
            <Button x:Name="btnUltimo" Click="BtnUltimo_Click" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="40" Grid.Column="5" Grid.Row="4" Margin="0,11,0,0">
                <DockPanel>
                    <Image x:Name="imgUltimo"></Image>
                </DockPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
